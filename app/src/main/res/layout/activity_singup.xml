<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:fitsSystemWindows="true"
        tools:context=".Login.SingupActivity"
        >

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.6"
            android:scaleType="centerCrop"
            android:src="@drawable/gymbackground" />



        <androidx.cardview.widget.CardView
            android:id="@+id/view2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:elevation="12dp"
            app:cardCornerRadius="75dp"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView5">

            <ImageView
                android:id="@+id/profileimag"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>


        <Button
            android:id="@+id/addimag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add image"
            android:layout_marginTop="10dp"
            android:backgroundTint="#CD3C3C"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view2" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/singupbtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="60dp"
            android:background="@drawable/button_backgeound"
            android:backgroundTint="#CD3C3C"
            android:text="Singup"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:id="@id/container"
            android:layout_width="0dp"
            android:layout_height="400dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/addimag">


            <EditText
                android:id="@+id/singup_Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:drawableRight="@drawable/email"
                android:drawableTint="@color/white"
                android:hint="Email"
                android:textColorHint="#9E9D9D"
                android:textColor="@color/white"
                android:inputType="textEmailAddress"

                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="343dp" />

            <EditText
                android:id="@+id/singup_Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:backgroundTint="@color/white"
                android:drawableRight="@drawable/password"
                android:drawableTint="@color/white"
                android:hint="Password"
                android:textColorHint="#9E9D9D"
                android:inputType="textPassword"
                android:textColor="@color/white"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="410dp" />

            <EditText
                android:id="@+id/singup_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:backgroundTint="@color/white"
                android:drawableRight="@drawable/username"
                android:drawableTint="@color/white"
                android:hint="username"
                android:textColorHint="#9E9D9D"
                android:inputType="text"
                android:textColor="@color/white"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="278dp" />

            <EditText
                android:id="@+id/singup_Phonenb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:backgroundTint="@color/white"
                android:drawableRight="@drawable/phone"
                android:drawableTint="@color/white"
                android:hint="Phone namber"
                android:textColorHint="#9E9D9D"
                android:inputType="number"
                android:textColor="@color/white"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="481dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="what are you ?"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="18sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioGroup
                    android:id="@+id/radio"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/coach"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Coach"
                        android:textColor="@color/white"
                        android:textSize="24dp" />



                <RadioButton
                    android:id="@+id/cliet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Client"
                    android:textColor="@color/white"
                    android:textSize="24dp" />
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>


        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="162dp"
            android:layout_marginTop="129dp"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="@+id/singupbtn"
            app:layout_constraintTop_toTopOf="@+id/container" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>